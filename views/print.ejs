<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Print</title>
 <%- include('./partials/header.ejs') %>
 <style>
  .center{
    text-align: center;
    width: 100dvw;
  }
  .wrapper{
    border: 2px solid black;
    height: max-content + 80dvh;
  }
 </style>
  </head>
  <body class="bg-dark-subtle ">
    <div class="wrapper">
    <nav class="navbar bg-dark-subtle">
      
      <div class="container p-5 py-2">
        <a class="navbar-brand center" href="/dashboard">Hashmi Grain & Bakers</a>
      </div>
    </nav>
    <div class="container center">
      <h5>Shop# 9B CANAL HEIGHTS AA BLOCK SEC D BAHRIA TOWN LAHORE</h5>
      <h5>PH# 03234645823</h5>
<table class="table align-middle">
  <thead class="list-group mt-5 align-middle ">
    <tr class="list-group-item d-flex justify-content-around align-middle">
          <th> <span>Sr#</span></th>
          <th><span>Product</span></th>
          <th><span>Quantity</span></th>
          <th><span>Price</span></th>
        </li>
    </tr>
    </thead>
    <tbody class="list-group mt-5 align-middle">
      <% let total_price = 0 %>
      <% let date = new Date() %>
      <% orders.forEach(list=>{ %>
      <tr class="list-group-item d-flex justify-content-around align-middle">
          <td><span><%= list.orderno %></span></td>
          <td><span><%= list.productname %></span></td>
          <td><span><%= list.productquantity %>kg</span></td>
          <td><span><%= list.totalprice %>rs</span></td>
        <% total_price+=list.totalprice %>
    </tr>
    <% }) %>
    </tbody>
    </table>
    <div class="d-flex flex-column">
      <span class="m-2">Total Price: <%= total_price %>rs</span>
      <span class="m-2">Date: <%= date.toDateString() %></span>
      <span class="m-2"><img src="<%= qrcode %>" alt="" width="150px" height="150px">%></span>
      
    </div>
  </div>
    <%- include('./partials/footer.ejs') %>
  </body>
</html>
